{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": false,
    "module": "none",
    "target": "es2017",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "rootDir": "../",
    "outDir": "../../dist",
    "removeComments": true
  },
  "include": [
    "js/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

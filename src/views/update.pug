doctype html
html
  head
    title Kamihime Database
    script(src='/lib/jquery.min.js')
    link(rel='stylesheet', href='/lib/bootstrap.min.css')
    link(rel='stylesheet', href='/constants/style.css')
  body(style="min-width: 1280px; float:center;")
    h1 Kamihime Database Dashboard
    h2 <sup>Where we configure our 2D Waifus.</sup>
    h2 <sup>Session Creator: #{user.userId}</sup>
    br

    center
      div(class="container")
        img(src='/img/wiki/' + info.avatar)
        span(value=info.name) 
          b #{info.name}
        br
        span(value=info.id)
          span(style="font-size:13px") ##{info.id.toUpperCase()}
      div(style="position: relative;")
        div(id="manual" style="position: absolute; top: 0; bottom: 0; left: 0; right: 0;")
          form(method="POST" action="/redirect")
            input(type="hidden" name="id" value=info.id)
            input(type="hidden" name="user" value=user.userId)
            input(type="hidden" name="avatar" value=info.avatar)
            h2 Empty fields to fill (with â™¥ iykwim)

            for key in Object.keys(info)
              if (key === 'id' || key === 'avatar')
                - continue;
              textarea(name=key placeholder=key cols="40" rows="2") #{info[key]}
            p
              input(type='submit', value='SUBMIT INFO')

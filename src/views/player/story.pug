extends ../_templates/player
include assets/side-nav-content

append head
  meta(name='viewport', content='width=450, initial-scale=0.8, maximum-scale=1.0, user-scalable=0')
  script.
    let script = !{JSON.stringify(script).replace(/\{\{主人公\}\}/g, (user ? user.username : 'Master'))};
    const SCENARIOS = "#{SCENARIOS}";
    const BG_IMAGE = "#{BG_IMAGE}";
    const BGM = "#{BGM}";
    const FG_IMAGE = "#{FG_IMAGE}";
  script(src='//cdn.jsdelivr.net/npm/howler@2.1.1/dist/howler.core.min.js')
  script(src='/js/player.js')
  script(src='/js/player/story.js')

block content
  div.panel-wrapper
    div.panel
      button(class='invi leftNav', nav='left')
      |
      button(class='invi rightNav', nav='right')
      div#image
      div#dialog
        div#text
          div#characterName
          div#characterTalk
